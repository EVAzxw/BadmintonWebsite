<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.MatchMapper">
    <!-- 查询所有赛事：对应selectAllMatches方法 -->
    <select id="selectAllMatches" resultType="Match">
        SELECT id,
               match_name AS matchName,
               match_time AS matchTime,
               location,
               requirement,
               image_url AS imageUrl
        FROM matches
    </select>
</mapper>